<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.justjava.MainActivity">

        <EditText
            android:id="@+id/name_Field_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Would You Rather Have?:"
            android:textAllCaps="true" />

        <CheckBox
            android:id="@+id/mms_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="MandM's"
            android:textSize="16sp"/>

        <CheckBox
            android:id="@+id/skittles_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Skittles"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/name_Field_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Other"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Would You Rather Have?:"
            android:textAllCaps="true" />

        <CheckBox
            android:id="@+id/snickers_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Snickers"
            android:textSize="16sp"/>

        <CheckBox
            android:id="@+id/butterfinger_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Butterfinger"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Would You Rather Have?:"
            android:textAllCaps="true" />

        <CheckBox
            android:id="@+id/milk_chocolate_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Milk Chocolate"
            android:textSize="16sp"/>

        <CheckBox
            android:id="@+id/dark_chocolate_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Dark Chocolate"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/name_Field_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Other"
            android:inputType="textCapWords" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="submitOrder"
            android:text="Submit" />

    </LinearLayout>

</ScrollView>